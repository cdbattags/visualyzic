{
  "entrypoint": "index.html",
  "shell": "src/v-spectrogram-core.html",
  "fragments": [
    "src/v-spectrogram-controls.html",
    "src/v-oscillator.html",
    "src/v-audio-load.html",
    "src/v-about-me.html",
    "src/v-scene.html"
  ],
  "sources": [
    "src/**/*",
    "styles/**/*",
    "images/**/*",
    "test/**/*",
    "bower.json",
    "package.json",
    "spotify-web-api.js"
  ],
  "extraDependencies": [
    "manifest.json",
    "bower_components/webcomponentsjs/*.js"
  ],
    
  "lint": {
    "rules": ["polymer-2"],
    "ignoreWarnings": ["undefined-elements",
                      "databind-with-unknown-property",
                      "unknown-superclass"]
  },
  "builds": [
    {
      "preset": "es5-bundled"
    },
    {
      "preset": "es6-bundled"
    },
    {
      "preset": "es6-unbundled"
    }
  ]
}
